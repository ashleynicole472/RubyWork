<h3>Comments:</h3>
<!-- Code to show username and the body of the users comment -->
<!-- Also deletes the users comment -->
<% @post.comments.each do |comment| %>
    <div class="well">
        <p><strong><%= comment.username %></strong> : <%= comment.body %>
            <%= link_to '[X]', [comment.post, comment],
                                            method: :delete,
                                            data: { confirm: 'Are you sure?'}
                                            %>
        </p>
        <hr>
    </div>
<% end %>
