<h1>Add post here:</h1>
<%= form_for :post, url: posts_path do |f| %>
  <% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>
  <p>
    <%= f.label :title %><hr>
    <%= f.text_field :title %>
  </p>
<br>
  <p>
    <%= f.label :body %><hr>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
